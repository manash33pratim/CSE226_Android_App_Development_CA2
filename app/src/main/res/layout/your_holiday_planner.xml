<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:text="Your Holiday Planner"
            />

        <HorizontalScrollView
            android:background="@drawable/bg3"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                  <ImageButton
                      android:id="@+id/agara"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      android:src="@drawable/agra"
                      android:padding="4dp"
                      android:scaleType="fitXY"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:backgroundTint="@color/white"
                      android:textColor="@color/black"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="AGARA"
                      android:textStyle="bold"
                      android:padding="5dp"
                      android:layout_gravity="center"
                      />

              </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/himachal"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/himachal"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIMACHAL"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/goa"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/goa"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOA"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/kerala"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/kerala"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KERALA"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/leh"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/kerala"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LADAKH"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/varansi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/varansi"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VARANSI"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>
        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:hint="Enter your name:" />

        <TextView
            android:id="@+id/Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"

            android:textSize="20sp"
            android:hint="Select the Place" />

        <EditText
            android:id="@+id/EtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="No Person:" />

        <EditText
            android:id="@+id/EtSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="No of days:" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/submitData"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit" />



                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/updateData"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update" />

                <Button
                    android:id="@+id/deleteData"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete" />
            </LinearLayout>



        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/displayId"
                android:gravity="center"

                android:textColor="#CA1B1B"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Name\n\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/displayName"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Place\n\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/displayAge"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="No. People\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/displaySalary"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Days\n\n" />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/total"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Amount\n\n" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>